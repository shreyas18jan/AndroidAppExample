<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LabelExamplePage">

    <!--
    LinearLayout : Used for Aligning View Either Horizontally or Vertically.
    attributes used - Width, Height
    More Info - https://developer.android.com/reference/android/widget/LinearLayout
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!--
        TextView : Used for displaying Text.
        attributes used - Width, Height, Id(to uniquely identify this button), Text Alignment, Text(text to show), Padding, Text Size
        More Info - https://developer.android.com/reference/android/widget/TextView
        -->
        <TextView
            android:id="@+id/labelPageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="10dp"
            android:text="@string/label_example"
            android:textSize="24sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>